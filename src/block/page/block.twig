{% if view == "header" %}
    <div class="{{content_prefix}}header  {{content_mod}}">
        <div>
            <div class="{{content_prefix}}btn  is--goback  {{content_mod}}">
                {% include "../common/button/tpl.twig" with {
                    view:   'tpl',
                    tag:    back_tag,
                    link:   back_link,
                    attr:   back_attr,
                    modal:  back_modal,
                    prefix: back_prefix,
                    mod:    back_mod,
                    elem:   back_elem,
                    icon:   back_icon,
                    name:   back,
                } %}
            </div> 
            <h1 class="{{content_prefix}}heading  {{content_mod}}"> 
                {{heading}}             
            </h1> 
            {% if text %}
            <div class="{{content_prefix}}text  {{content_mod}}"> 
                {{text}}                
            </div> 
            {% endif %}
            {% if tags %}
            <ul class="{{content_prefix}}tags  {{content_mod}}"> 
                {% for tags in tags %}
                    <li><a href="{{tags.link}}">{{tags.name}}</a></li>
                {% endfor %}             
            </ul> 
            {% endif %}
        </div> 
        {% if more %}
        <div> 
        </div> 
        {% endif %}
    </div>
{% endif %}