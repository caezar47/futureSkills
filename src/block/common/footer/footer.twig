{% if view == "base" %}
	<footer class="{{footer_prefix}}block"> 	
		<div class="container">
			<div class="{{footer_prefix}}row">
				<a href="{{page.index}}" class="{{footer_prefix}}copyright">
					<img src="{{path.img}}/svg/logotip-white.svg" class="img-responsive" alt="">
				</a>
				<div class="{{footer_prefix}}address">
					<p>{{contacts.address}}</p>
				</div>
				<div class="{{footer_prefix}}contacts">
					<a href="tel:{{contacts.phone_tel}}">{{contacts.phone}}</a>
				</div>
				<div class="{{footer_prefix}}contacts">
					<a href="mailto:{{contacts.email}}">{{contacts.email}}</a>
				</div>
				<div class="{{footer_prefix}}btn">
					 {% include "../button/tpl.twig" with {
                        view:'tpl',
                        tag:'button',
                        type:'button',
                        attr: "data-toggle='modal' data-target='#modal-tpl-phone-email'",
                        modal: '"id":"5","target":"Получить презентацию","name":"Получить презентацию","note":"Наш специалист вышлет Вам презентацию в ближайшее время"',
                        prefix:prefix.btn,
                        mod:"is--line  is--white",
                        elem:'item',
                        name:'Заказать звонок',
                    } %}
				</div>
			</div>
		</div>
	</footer>
{% endif %}