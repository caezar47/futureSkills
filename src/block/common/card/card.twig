{% if view == 'building' %}
	{% for value in list %}
		<div class="{{prefix}}item  {{mod}}">
			<a href="{{value.link}}" class="{{prefix}}img  {{mod}}">
				<img src="{{value.img}}" class="img-responsive" alt="">
				{% if value.decs %}
				<div>
					{% if value.qty %}
					<h5><span>{{value.qty}}</span> Квартир в&nbsp;продаже</h5>
					{% endif %}
					{% if value.decs %}
					<dl>
						{% for d in value.decs %}
							<div>
								<dt>{{d.name}}</dt>
								<dd><span>{{d.value}}</span> {{d.value_v}}</dd>
							</div>
						{% endfor %}
					</dl>
					{% endif %}
				</div>
				{% endif %}
			</a>
			<div class="{{prefix}}note  {{mod}}">				
				<h4><a href="{{value.link}}">{{value.name}}</a></h4>
				{% if value.note %}
				<div class="is--note">{{value.note}}</div>
				{% endif %}
				{% if value.address %}
				<p class="is--address">{{value.address}}</p>
				{% endif %}
				{% if value.metro %}
				<p class="is--metro">{{value.metro}}</p>
				{% endif %}
			</div>
		</div>
	{% endfor %}
{% endif %}
{% if view == 'newbuilding' %}
	{% for value in list %}
		<div>
			<div class="{{prefix}}item  grid__row  {{mod}}">
				<a href="{{value.link}}" class="{{prefix}}img  {{mod}}">
					<img src="{{value.img}}" class="img-responsive" alt="">
				</a>
				<div class="{{prefix}}note  {{mod}}">				
					<h3><a href="{{value.link}}">{{value.name}}</a></h3>
					{% if value.address %}
					<p class="is--address">{{value.address}}</p>
					{% endif %}
					{% if value.note %}
					<div class="is--note">{{value.note}}</div>
					{% endif %}
					{% if value.decs %}
					<dl>
						{% for d in value.decs %}
							<div>
								<div class="is--decs-img">
									{% include "../svg-sprite/svg.twig" with {icon:d.icon} %}
								</div>
								<div>
									<dt>{{d.name}}</dt>
									<dd>{{d.value}}</dd>
								</div>
							</div>
						{% endfor %}
					</dl>
					{% include "../button/tpl.twig" with {
	                    view:'tpl',
	                    tag:'a',
	                    link: value.link,
	                    prefix:'button__',
	                    mod:"",
	                    elem:'item',
	                    name: 'Подробнее о ЖК',
	                } %}
					{% endif %}
				</div>
			</div>
		</div>
	{% endfor %}
{% endif %}
{% if view == 'apartments-card' %}
	{% for value in list %}
		<div class="{{prefix}}item  {{mod}}">
			<a href="{{value.link}}" class="{{prefix}}img  {{mod}}">
				<img src="{{value.img}}" class="img-responsive" alt="">
			</a>
			<div class="{{prefix}}note  {{mod}}">				
				<h4><a href="{{value.link}}">{{value.name}}</a></h4>
				{% if value.complex %}
				<h5>{{value.complex}}</h5>
				{% endif %}
				{% if value.address %}
				<p class="is--address">{{value.address}}</p>
				{% endif %}
				{% if value.decs %}
				<dl>
					{% for d in value.decs %}
						<div>
							<dt>{{d.name}}</dt>
							<dd>{{d.value}}</dd>
						</div>
					{% endfor %}
				</dl>
				{% endif %}
				{% if value.cost %}
				<p class="is--cost">{{value.cost}}</p>
				{% endif %}
			</div>
		</div>
	{% endfor %}
{% endif %}
{% if view == 'apartments-table' %}
	<div class="{{prefix}}responsive  {{mod}}">
		<table class="{{prefix}}group  {{mod}}">
			<thead>
				<tr>
					<th>Планировка</th>
					<th>Комнатность</th>
					<th>Расположение</th>
					<th>Этаж</th>
					<th>Общая площадь, м<sup>2</sup></th>
					<th>Цена, ₽</th>
					<th></th>					
				</tr>
			</thead>
			<tbody>			
			{% for value in list %}
				<tr class="{{prefix}}item  {{mod}}">
					<td>
						<a class="{{prefix}}img  {{mod}}" href="{{value.link}}">
							<img src="{{value.img}}" class="img-responsive" alt="">
						</a>
					</td>
					<td>
						{% if value.room %}
						<p class="is--room">{{value.room}}</p>
						{% endif %}
					</td>
					<td>
						<h4><a href="{{value.link}}">{{value.name}}</a></h4>
						{% if value.complex %}
						<h5>{{value.complex}}</h5>
						{% endif %}
						{% if value.address %}
						<p class="is--address">{{value.address}}</p>
						{% endif %}
					</td>
					<td>
						{% if value.floor %}
						<p class="is--floor">{{value.floor}}</p>
						{% endif %}
					</td>
					<td>
						{% if value.area %}
						<p class="is--area">{{value.area}}</p>
						{% endif %}
					</td>
					<td>
						{% if value.cost %}
						<p class="is--cost">{{value.cost}}</p>
						{% endif %}
					</td>
					<td>
						<div class="{{prefix}}btn  {{mod}}">
							{% include "../button/tpl.twig" with {
		                        view:'tpl',
		                        tag:'button',
		                        type:'button',
		                        attr: "data-toggle='modal' data-target='#modal-tpl-phone-email'",
		                        modal: '"id":"5","target":"Получить презентацию","name":"Получить презентацию","note":"Наш специалист вышлет Вам презентацию в ближайшее время"',
		                        prefix:'button__',
		                        mod:"is--line",
		                        elem:'item',
		                        name:value.btn,
		                    } %}
		                </div>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endif %}